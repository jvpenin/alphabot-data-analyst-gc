/* ===== BANNER ===== */
#app-banner {
  position: fixed;
  top: 1rem;
  right: 1rem;
  max-width: 400px;
  padding: 1rem 1.5rem;
  border-radius: 12px;
  font-size: 0.875rem;
  font-weight: 500;
  z-index: 10000;
  animation: slideInRight 0.3s ease;
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.5);
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(100px);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* ===== RESPONSIVE - TABLET ===== */
@media (max-width: 1024px) {
  .sidebar {
    width: 280px;
  }
  
  .bubble {
    max-width: 80%;
  }
  
  .chat-header {
    padding: 1.5rem 1.5rem 1rem;
  }
  
  /* Título principal para tablet */
  .main-logo {
    font-size: 2.5rem;
  }
  }
  
  .messages {
    padding: 1.5rem;
  }
  
  .input-area {
    padding: 1rem 1.5rem 1.5rem;
  }
}

/* ===== RESPONSIVE - MOBILE ===== */
@media (max-width: 768px) {
  .menu-toggle {
    display: flex;
  }
  
  .sidebar {
    position: fixed;
    left: 0;
    top: 0;
    height: 100%;
    z-index: 1000;
    transform: translateX(-100%);
    box-shadow: 2px 0 16px rgba(0, 0, 0, 0.5);
    width: 85vw;
    max-width: 320px;
  }
  
  .sidebar.open {
    transform: translateX(0);
  }
  
  .sidebar-overlay.active {
    display: block;
  }
  
  .chat-container {
    width: 100%;
  }
  
  .chat-header {
    padding: 1.5rem 1rem 1rem;
  }
  
  /* Título principal responsivo para mobile */
  .main-logo {
    font-size: 2rem;
  }
    padding-top: 4.5rem; /* Espaço para o botão de menu */
  }
  
  .chat-title h2 {
    font-size: 1.125rem;
  }
  
  .messages {
    padding: 1rem;
    gap: 1rem;
  }
  
  .bubble {
    max-width: 85%;
    padding: 0.875rem 1rem;
    font-size: 0.875rem;
  }
  
  .input-area {
    padding: 1rem;
    gap: 0.75rem;
  }
  
  .input-area input {
    padding: 0.875rem 1rem;
    font-size: 0.875rem;
  }
  
  .send-btn {
    width: 44px;
    height: 44px;
  }
  
  #app-banner {
    top: 4.5rem;
    right: 1rem;
    left: 1rem;
    max-width: none;
    font-size: 0.813rem;
    padding: 0.875rem 1rem;
  }
  
  /* Ajustes na sidebar mobile */
  .sidebar {
    padding: 1.5rem 1rem;
    gap: 1.5rem;
  }
  
  .upload-zone {
    padding: 1rem;
  }
  
  .upload-trigger {
    padding: 0.875rem;
  }
}

/* ===== RESPONSIVE - MOBILE PEQUENO ===== */
@media (max-width: 480px) {
  .chat-title h2 {
    font-size: 1rem;
  }
  
  .chat-subtitle {
    font-size: 0.75rem;
  }
  
  .bubble {
    font-size: 0.813rem;
    padding: 0.75rem 0.875rem;
  }
  
  .input-area {
    padding: 0.875rem;
  }
  
  .input-area input {
    font-size: 0.813rem;
    padding: 0.75rem 0.875rem;
  }
  
  .send-btn {
    width: 40px;
    height: 40px;
  }
  
  .send-btn svg {
    width: 18px;
    height: 18px;
  }
  
  .sidebar {
    width: 90vw;
  }
}

/* ===== SUPORTE A TOUCH ===== */
@media (hover: none) and (pointer: coarse) {
  .upload-trigger:hover {
    transform: none;
  }
  
  .send-btn:hover {
    transform: none;
  }
  
  .delete-btn {
    padding: 0.75rem;
  }
  
  .delete-btn svg {
    width: 18px;
    height: 18px;
  }
}

/* ===== LANDSCAPE MOBILE ===== */
@media (max-width: 768px) and (orientation: landscape) {
  .chat-header {
    padding: 1rem 1rem 0.75rem;
    padding-top: 4rem;
  }
  
  .messages {
    padding: 0.75rem 1rem;
  }
  
  .input-area {
    padding: 0.75rem 1rem;
  }
}